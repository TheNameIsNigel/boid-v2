<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.teamboid.twitter"
          android:versionCode="1"
          android:versionName="0.1 Beta">

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application android:name="com.teamboid.twitter.BoidApp" android:label="@string/app_name"
                 android:icon="@drawable/ic_launcher" android:theme="@style/Theme.Boidlight">

        <activity android:name="com.teamboid.twitter.MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.teamboid.twitter.LoginActivity" android:label="@string/welcome"/>

        <activity android:name="com.teamboid.twitter.ComposeActivity" android:label="@string/compose"/>

        <activity android:name="com.teamboid.twitter.SettingsActivity" android:label="@string/settings"/>

        <activity android:name="com.teamboid.twitter.ConversationActivity"/>

        <service android:name="com.teamboid.twitter.services.ComposerService" android:label="@string/compose"/>

    </application>

</manifest>
