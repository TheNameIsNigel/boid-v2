<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:paddingTop="5dp" android:paddingBottom="5dp" android:paddingRight="5dp">

    <com.android.volley.toolbox.NetworkImageView android:id="@+id/profilePic"
                                                 android:layout_width="@dimen/feed_profile_pic"
                                                 android:layout_height="@dimen/feed_profile_pic"
                                                 android:src="@drawable/ic_contact_picture"
                                                 android:layout_marginRight="7dp"/>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">

        <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">

            <TextView android:id="@+id/userName" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:singleLine="true" android:textColor="?usernameTextColor"
                      android:textSize="@dimen/usernameText"
                      android:layout_alignParentLeft="true" android:layout_toLeftOf="@+id/timestamp"/>

            <com.teamboid.twitter.views.RobotoThinTextView android:id="@+id/timestamp"
                                                           android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:singleLine="true"
                                                           android:textSize="@dimen/timestampText"
                                                           android:textColor="?contentTextColor"
                                                           android:layout_alignParentRight="true"
                                                           android:layout_marginLeft="3dp"/>

        </RelativeLayout>

        <com.teamboid.twitter.views.RobotoThinTextView android:id="@+id/content" android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:lineSpacingMultiplier="1.1"
                                                       android:textSize="@dimen/contentText"
                                                       android:textColor="?contentTextColor"/>

        <LinearLayout android:id="@+id/retweetedBy" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:layout_marginTop="3dp"
                      android:orientation="horizontal" android:visibility="gone"
                      android:gravity="center_vertical">

            <ImageView android:layout_width="@dimen/retweet_indicator" android:layout_height="@dimen/retweet_indicator"
                       android:scaleType="fitXY" android:src="?retweetIndicator"/>

            <com.teamboid.twitter.views.RobotoThinTextView android:id="@+id/retweetedByText"
                                                           android:layout_width="wrap_content"
                                                           android:layout_height="wrap_content"
                                                           android:singleLine="true"
                                                           android:textColor="?contentTextColor"
                                                           android:textSize="@dimen/timestampText"
                                                           android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>