<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:paddingTop="5dp" android:paddingBottom="5dp" android:paddingLeft="5dp"
              android:gravity="right">

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:gravity="center_vertical|right">


        <com.teamboid.twitter.views.RobotoThinTextView android:id="@+id/content" android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:lineSpacingMultiplier="1.1"
                                                       android:textSize="@dimen/convoMessageText"
                                                       android:textColor="?contentTextColor"/>

        <com.teamboid.twitter.views.RobotoThinTextView android:id="@+id/timestamp"
                                                       android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:singleLine="true"
                                                       android:textSize="@dimen/timestampText"
                                                       android:textColor="?contentTextColor"
                                                       android:layout_marginTop="1dp"/>

    </LinearLayout>

    <com.android.volley.toolbox.NetworkImageView android:id="@+id/profilePic"
                                                 android:layout_width="@dimen/feed_profile_pic"
                                                 android:layout_height="@dimen/feed_profile_pic"
                                                 android:src="@drawable/ic_contact_picture"
                                                 android:layout_marginLeft="10dp"/>


</LinearLayout>