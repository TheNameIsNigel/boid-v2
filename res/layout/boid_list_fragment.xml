<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <ListView android:id="@+id/list" android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:paddingTop="3dp"/>

    <com.teamboid.twitter.views.RobotoThinTextView android:id="@+id/empty" android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:textSize="18sp" android:textColor="@color/white"/>

    <ProgressBar android:id="@+id/progress"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"
                 style="@android:style/Widget.Holo.ProgressBar.Large"
                 android:indeterminateOnly="true" android:visibility="gone"/>

</LinearLayout>