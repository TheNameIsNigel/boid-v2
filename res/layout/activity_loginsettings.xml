<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="20dp">

        <com.afollestad.silk.views.text.SilkTextView android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:text="@string/custom_consumer_key"
                                                     android:textSize="18sp"
                                                     android:textColor="?headerTextColor"/>

        <com.afollestad.silk.views.text.SilkEditText android:id="@+id/consumerKey"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:inputType="textEmailAddress"
                                                     android:layout_marginTop="4dp"
                                                     android:hint="@string/custom_consumer_key"/>

        <com.afollestad.silk.views.text.SilkTextView android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     android:text="@string/custom_consumer_secret"
                                                     android:layout_marginTop="20dp"
                                                     android:textSize="18sp"
                                                     android:textColor="?headerTextColor"/>

        <com.afollestad.silk.views.text.SilkEditText android:id="@+id/consumerSecret"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:inputType="textPersonName"
                                                     android:layout_marginTop="4dp"
                                                     android:hint="@string/custom_consumer_secret"/>

    </LinearLayout>

</ScrollView>