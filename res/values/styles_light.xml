<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Boidlight" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_boidlight</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Boidlight</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Boidlight</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Boidlight</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Boidlight</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_boidlight</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_boidlight</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Boidlight</item>

        <item name="inputFrameBackground">@android:color/white</item>
        <item name="usernameTextColor">@android:color/black</item>
        <item name="contentTextColor">@android:color/secondary_text_light</item>
        <item name="navDrawerBackground">@color/drawer_background_light</item>
        <item name="errorTextColor">@color/red</item>
        <item name="headerTextColor">@android:color/holo_blue_light</item>

        <item name="boid_button">@drawable/boid_button_light</item>

        <item name="addIcon">@drawable/ic_add_dark</item>
        <item name="composeIcon">@drawable/ic_compose_dark</item>
        <item name="sendIcon">@drawable/ic_send_dark</item>
        <item name="refreshIcon">@drawable/ic_refresh_dark</item>
        <item name="sendButton">@drawable/send_button_dark</item>
        <item name="retweetIndicator">@drawable/ic_retweet_dark</item>
        <item name="favoritedIndicator">@drawable/ic_favorited_dark</item>

        <item name="replyIcon">@drawable/ic_reply_dark</item>
        <item name="replyAllIcon">@drawable/ic_reply_all_dark</item>
        <item name="retweetIcon">@drawable/ic_retweet_dark</item>
        <item name="favoritedIcon">@drawable/ic_favorited_dark</item>
        <item name="unfavoritedIcon">@drawable/ic_unfavorited_dark</item>
        <item name="shareIcon">@drawable/ic_share_dark</item>
        <item name="deleteIcon">@drawable/ic_delete_dark</item>

        <item name="editIcon">@drawable/ic_edit_dark</item>
        <item name="searchIcon">@drawable/ic_search_dark</item>
        <item name="pinIcon">@drawable/ic_pin_dark</item>

        <item name="attachLocation">@drawable/ic_location_attach_dark</item>
        <item name="attachMedia">@drawable/ic_gallery_attach_dark</item>

        <item name="emojiBackspace">@drawable/ic_backspace_dark</item>
        <item name="emojiKeyboard">@drawable/ic_emoji_keyboard_dark</item>

    </style>

    <style name="ActionBar.Transparent.Boidlight" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_boidlight</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Boidlight</item>
    </style>

    <style name="PopupMenu.Boidlight" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_boidlight</item>
    </style>

    <style name="DropDownListView.Boidlight" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_boidlight</item>
    </style>

    <style name="ActionBarTabStyle.Boidlight" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_boidlight</item>
    </style>

    <style name="DropDownNav.Boidlight" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_boidlight</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_boidlight</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_boidlight</item>
    </style>

    <style name="ProgressBar.Boidlight" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_boidlight</item>
    </style>

    <style name="ActionButton.CloseMode.Boidlight" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_boidlight</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Boidlight.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Boidlight</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Boidlight</item>
    </style>

</resources>