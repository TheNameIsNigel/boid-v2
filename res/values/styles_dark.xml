<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Boid" parent="@android:style/Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_boid</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Boid</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Boid</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Boid</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Boid</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Boid</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_boid</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_boid</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Boid</item>

        <item name="usernameTextColor">@color/white</item>
        <item name="contentTextColor">@color/white</item>
        <item name="navDrawerBackground">@color/drawer_background_dark</item>
        <item name="composeIcon">@drawable/compose</item>
        <item name="sendIcon">@drawable/send</item>
    </style>
    <style name="ActionBar.Solid.Boid" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_boid</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_boid</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_boid</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Boid</item>
    </style>
    <style name="ActionBar.Transparent.Boid" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_boid</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Boid</item>
    </style>
    <style name="PopupMenu.Boid" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_boid</item>
    </style>
    <style name="DropDownListView.Boid" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_boid</item>
    </style>
    <style name="ActionBarTabStyle.Boid" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_boid</item>
    </style>
    <style name="DropDownNav.Boid" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_boid</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_boid</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_boid</item>
    </style>
    <style name="ProgressBar.Boid" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_boid</item>
    </style>
    <style name="ActionButton.CloseMode.Boid" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_boid</item>
    </style>
    <!--
     this style is only referenced in a Light.DarkActionBar based theme
    -->
    <style name="Theme.Boid.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Boid</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Boid</item>
    </style>

</resources>